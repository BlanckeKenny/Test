@model SearchIndexVm
@{
    ViewData["Title"] = "Home Page";
}

@if (Model.Bieren == null)
{
    <p>
        &laquo;Select a brewery in the menu on the left.
    </p>
}
else
{
    <table class="table mt-5" id="beer-table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Beer</th>
                <th scope="col">Alc %</th>
                <th scope="col">Flavors</th>
                <th scope="col">Brouwerij</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var beer in Model.Bieren)
            {
                <tr>
                    <td>@beer.Name</td>
                    <td>@beer.AlcoholByVolume</td>
                    <td>
                        @foreach (var flavor in beer.Flavors)
                        {
                            <a asp-action="FindByFlavor" asp-controller="Home" asp-route-id="@flavor.FlavorId"><span class="badge bg-info text-white">@flavor.Flavor.Name</span></a>
                        }
                </td>
                <td></td>
            </tr>

        }
        </tbody>
        <tfoot>
        <th colspan="3"></th>
        </tfoot>
    </table>
}

